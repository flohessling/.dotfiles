{
    "$schema": "https://opencode.ai/config.json",
    "permission": {
        "external_directory": {
            "*": "ask",
            "~/code/services/**": "allow"
        },
        "bash": {
            "*": "ask",
            "git status*": "allow",
            "git log*": "allow",
            "git diff*": "allow",
            "git branch*": "allow",
            "git show*": "allow",
            "git stash list*": "allow",
            "grep *": "allow",
            "rg *": "allow",
            "ls *": "allow",
            "which *": "allow",
            "cat *": "allow",
            "head *": "allow",
            "tail *": "allow",
            "wc *": "allow",
            "find *": "allow",
            "git push*": "deny",
            "git push *": "deny",
            "git reset --hard*": "deny",
            "git checkout --force*": "deny",
            "git clean*": "deny",
            "rm *": "deny",
            "rm -rf *": "deny",
            "rmdir *": "deny",
            "mv /*": "deny",
            "brew *": "deny",
            "apt *": "deny",
            "apt-get *": "deny",
            "pip install*": "deny",
            "pip3 install*": "deny",
            "npm install -g*": "deny",
            "npx *": "deny",
            "sudo *": "deny",
            "curl * | bash*": "deny",
            "curl * | sh*": "deny",
            "chmod *": "deny",
            "chown *": "deny",
            "launchctl *": "deny",
            "defaults write*": "deny",
            "networksetup *": "deny",
            "killall *": "deny",
            "pkill *": "deny",
            "shutdown *": "deny",
            "reboot*": "deny"
        },
        "edit": "ask",
        "webfetch": "allow",
        "read": {
            "*": "allow",
            "*.env": "deny",
            "*.env.*": "deny",
            "*.env.example": "allow",
            "*credentials*": "deny",
            "*secret*": "deny",
            "~/.ssh/*": "deny",
            "~/.aws/*": "deny",
            "~/.gnupg/*": "deny"
        }
    }
}
